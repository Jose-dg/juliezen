# =============================================================================
# CONFIGURACIÓN DJANGO
# =============================================================================

# Configuración básica de Django
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
DJANGO_SETTINGS_MODULE=core.settings.local

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# URL del frontend para CORS
FRONTEND_URL=http://localhost:3000

# =============================================================================
# BASE DE DATOS - DESARROLLO LOCAL
# =============================================================================

# Variables separadas para desarrollo local
DB_NAME=daydreamshop
DB_USER=daydreamshop
DB_PASSWORD=daydreamshop123
DB_HOST=localhost
DB_PORT=5433

# URL de conexión a PostgreSQL (para producción)
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_db
DATABASE_URL=postgresql://daydreamshop:daydreamshop123@db:5432/daydreamshop

# =============================================================================
# REDIS Y CACHE
# =============================================================================

# URL de conexión a Redis
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CELERY (TAREAS ASÍNCRONAS)
# =============================================================================

# Broker de Celery (Redis)
CELERY_BROKER_URL=redis://redis:6379/0

# Backend de resultados de Celery
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# SERVICIOS EXTERNOS
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# API de Scraping (reemplazar con tu proveedor)
SCRAPING_API_KEY=your-scraping-api-key-here
SCRAPING_API_URL=https://api.scraping-service.com/v1

# =============================================================================
# EMAIL (OPCIONAL)
# =============================================================================

# Configuración SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# =============================================================================
# ALMACENAMIENTO (OPCIONAL PARA PRODUCCIÓN)
# =============================================================================

# AWS S3 para archivos estáticos y media
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.amazonaws.com

# =============================================================================
# MONITOREO Y LOGS (OPCIONAL)
# =============================================================================

# Sentry para monitoreo de errores
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# SEGURIDAD (PRODUCCIÓN)
# =============================================================================

# Configuraciones de seguridad para producción
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# =============================================================================
# CONFIGURACIÓN ESPECÍFICA POR ENTORNO
# =============================================================================

# Para desarrollo local:
# - DEBUG=True
# - DJANGO_SETTINGS_MODULE=core.settings.local
# - Usar variables DB_NAME, DB_USER, DB_PASSWORD, DB_HOST, DB_PORT
